{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
		"target": "ES6",
		"module": "CommonJS",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["./src"]
}
